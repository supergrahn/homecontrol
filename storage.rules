rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

  function signedIn() { return request.auth != null; }

  // NOTE: Storage rules cannot depend on Firestore lookups for membership.
  // Enforce membership in app/CF; here we only restrict to signed-in users.

    // Scope all files to a household folder:
    // households/{hid}/tasks/{taskId}/...  OR  households/{hid}/attachments/...
    match /households/{hid}/{allPaths=**} {
      allow read, write: if signedIn()
        && request.resource.size < 10 * 1024 * 1024  // 10MB limit
        && request.resource.contentType.matches('image/.*|application/pdf');
    }
  }
}