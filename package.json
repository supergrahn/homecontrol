{
  "name": "home-control-app",
  "version": "0.1.0",
  "private": true,
  "main": "expo/AppEntry",
  "scripts": {
    "start": "expo start",
    "start:go": "expo start --tunnel",
    "start:dev": "expo start --dev-client --tunnel",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "gen:assets": "node scripts/generate-assets.js",
    "lint": "eslint -c eslint.config.mjs . --ext .ts,.tsx",
    "lint:fix": "eslint -c eslint.config.mjs . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "functions:test": "npm --prefix functions run test",
    "functions:build": "npm --prefix functions run build",
    "fb:version": "firebase --version",
    "fb:login": "firebase login",
    "fb:whoami": "firebase login:list",
    "deploy": "dotenv -e .env -- sh -c 'firebase deploy --only functions,firestore:rules,firestore:indexes,storage --project \"$FIREBASE_PROJECT\"'",
    "deploy:functions": "dotenv -e .env -- sh -c 'firebase deploy --only functions --project \"$FIREBASE_PROJECT\"'",
    "deploy:rules": "dotenv -e .env -- sh -c 'firebase deploy --only firestore:rules,storage --project \"$FIREBASE_PROJECT\"'",
    "deploy:indexes": "dotenv -e .env -- sh -c 'firebase deploy --only firestore:indexes --project \"$FIREBASE_PROJECT\"'",
    "emulators": "firebase emulators:start --project demo-homecontrol --only functions,firestore,auth",
    "smoke:invites": "node scripts/smoke-invites.js",
    "smoke:invites:exec": "firebase emulators:exec --project demo-homecontrol --only functions,firestore,auth 'node scripts/smoke-invites.js'",
    "contrast": "node scripts/contrast-check.js"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/native": "^7.1.6",
    "@react-navigation/native-stack": "^7.3.25",
    "@tanstack/react-query": "^5.51.23",
    "dayjs": "^1.11.13",
    "expo": "~53.0.22",
    "expo-blur": "~14.1.5",
    "expo-clipboard": "^7.1.5",
    "expo-constants": "~17.1.7",
    "expo-document-picker": "~12.0.0",
    "expo-font": "~13.3.2",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.4.0",
    "expo-image-picker": "^16.1.4",
    "expo-linking": "~7.1.7",
    "expo-localization": "~16.1.6",
    "expo-notifications": "^0.31.4",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.5",
    "expo-system-ui": "~5.0.11",
    "expo-web-browser": "~14.2.0",
    "firebase": "^12.1.0",
    "i18next": "^25.4.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-i18next": "^15.7.2",
    "react-native": "^0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-localize": "^3.5.2",
    "react-native-qrcode-svg": "^6.3.15",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@react-native-community/cli": "latest",
    "@testing-library/jest-native": "^5.2.2",
    "@testing-library/react-native": "^12.7.2",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.0.10",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "expo-build-properties": "^0.14.8",
    "expo-dev-client": "^5.2.4",
    "firebase-tools": "^13.7.2",
    "jest": "^29.7.0",
    "jest-expo": "^53.0.5",
    "prettier": "^3.3.3",
    "react-test-renderer": "19.0.0",
    "sharp": "^0.33.4",
    "typescript": "~5.8.3"
  }
}
